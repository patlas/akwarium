<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
             android:layout_height="match_parent" android:background="#ffe4e1" tools:context=".MainActivity"
             android:orientation="vertical"
    >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_main_horizontal_layout_height"
        android:id="@+id/temp_top_layout">

        <LinearLayout
            android:layout_width="@dimen/settings_icons_width"
            android:layout_height="match_parent"
            android:background="@drawable/temp_img">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/settings_inner_main_layout_width"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="TEMPERATURE"
                    android:id="@+id/textView2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#520000"
                    android:textStyle="bold"
                    android:paddingTop="5px"
                    android:singleLine="false"
                    android:textSize="@dimen/settings_titles_size"
                    android:paddingBottom="10px"
                    android:gravity="center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="150px"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="WATER:"
                            android:id="@+id/tv_water_temp"
                            android:layout_below="@+id/textView2"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:paddingTop="@dimen/settings_info_text_padding"
                            android:gravity="right"
                            android:textSize="@dimen/settings_info_text_size"
                            android:paddingRight="10px" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="AIR:"
                            android:id="@+id/tv_air_temp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:paddingTop="@dimen/settings_info_text_padding"
                            android:gravity="center|right"
                            android:textSize="@dimen/settings_info_text_size"
                            android:paddingRight="10px" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="22.3°C"
                            android:id="@+id/temp_water"
                            android:layout_below="@+id/textView2"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:paddingTop="@dimen/settings_info_text_padding"
                            android:gravity="left|center"
                            android:textSize="@dimen/settings_info_text_size"
                            android:paddingLeft="15px" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="25.1°C"
                            android:id="@+id/temp_air"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:paddingTop="@dimen/settings_info_text_padding"
                            android:gravity="left|center"
                            android:textSize="@dimen/settings_info_text_size"
                            android:paddingLeft="15px" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:id="@+id/termo_layout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="TERMOSTAT"
                    android:id="@+id/textView5"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#520000"
                    android:textStyle="bold"
                    android:paddingTop="5px"
                    android:textSize="@dimen/settings_titles_size"
                    android:paddingBottom="10px"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="22.3°C"
                    android:id="@+id/temp_term"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"
                    android:paddingTop="5px"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="60px"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/temp_termon"
                    android:showText="false"
                    android:gravity="center"
                    android:singleLine="false"
                    android:splitTrack="false"
                    android:layout_gravity="center"
                    android:paddingTop="15px"
                    android:paddingBottom="30px"
                    android:checked="false"
                    android:minWidth="100px"
                    android:minHeight="40px" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:id="@+id/temp_bottom_layout">

        <RelativeLayout
            android:layout_width="@dimen/settings_icons_width"
            android:layout_height="match_parent"
            android:background="@drawable/ph_img"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="@dimen/settings_inner_main_layout_width"
                    android:layout_height="match_parent"
                    android:id="@+id/ph_layout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="WATER PARAMS"
                        android:id="@+id/textView3"
                        android:textColor="#520000"
                        android:textStyle="bold"
                        android:paddingTop="5px"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="10px"
                        android:textSize="@dimen/settings_titles_size"
                        android:textIsSelectable="false"
                        android:gravity="center" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_horizontal">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="150px"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="WATER pH:"
                                android:id="@+id/textView6"
                                android:layout_below="@+id/textView2"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:paddingTop="@dimen/settings_info_text_padding"
                                android:textSize="@dimen/settings_info_text_size"
                                android:gravity="right"
                                android:paddingRight="10px" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="SET pH:"
                                android:id="@+id/textView8"
                                android:layout_below="@+id/textView2"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:paddingTop="@dimen/settings_info_text_padding"
                                android:textSize="@dimen/settings_info_text_size"
                                android:gravity="right"
                                android:paddingRight="10px"
                                android:layout_gravity="right" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="AUTO CO2:"
                                android:id="@+id/textView10"
                                android:layout_below="@+id/textView2"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:paddingTop="@dimen/settings_info_text_padding"
                                android:textSize="@dimen/settings_info_text_size"
                                android:gravity="right"
                                android:paddingRight="10px"
                                android:layout_gravity="center_horizontal" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="7.3"
                                android:id="@+id/water_ph"
                                android:layout_below="@+id/textView2"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:paddingTop="@dimen/settings_info_text_padding"
                                android:textSize="@dimen/settings_info_text_size"
                                android:gravity="left|right"
                                android:layout_gravity="center_horizontal"
                                android:paddingLeft="15px" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="7.0"
                                android:id="@+id/set_ph"
                                android:layout_below="@+id/textView2"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:paddingTop="@dimen/settings_info_text_padding"
                                android:textSize="@dimen/settings_info_text_size"
                                android:layout_gravity="center_horizontal"
                                android:gravity="left"
                                android:paddingLeft="15px"
                                android:paddingBottom="15px" />

                            <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/co2_auto"
                                android:showText="false"
                                android:gravity="center"
                                android:singleLine="false"
                                android:splitTrack="false"
                                android:paddingTop="@dimen/settings_info_text_padding"
                                android:paddingBottom="30px"
                                android:checked="false"
                                android:paddingLeft="10px" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="CALIBRATION"
                        android:id="@+id/textView11"
                        android:textColor="#520000"
                        android:textStyle="bold"
                        android:paddingTop="5px"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="10px"
                        android:textSize="@dimen/settings_titles_size"
                        android:gravity="center" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal">

                        <Button
                            android:layout_width="130px"
                            android:layout_height="match_parent"
                            android:text="START"
                            android:id="@+id/calib_btn_low"
                            android:background="@color/colorPrimaryDark"
                            android:layout_gravity="left"
                            android:layout_marginLeft="20px"
                            android:layout_marginBottom="20px" />

                        <Button
                            android:layout_width="130px"
                            android:layout_height="match_parent"
                            android:text="START"
                            android:id="@+id/calib_btn_high"
                            android:background="@color/colorPrimaryDark"
                            android:layout_gravity="right"
                            android:layout_marginLeft="20px"
                            android:layout_marginBottom="20px" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
